<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-gray-100">
    <ActionBar title="New Note" class="bg-purple-600">
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" />
    </ActionBar>

    <StackLayout class="p-4">
        <TextField hint="Title" text="{{ title }}" class="input p-4 mb-4 bg-white rounded-lg" />
        <TextView hint="Note content" text="{{ content }}" class="input p-4 h-40 bg-white rounded-lg" />
        <Button text="Save Note" tap="{{ onSaveNote }}" class="bg-purple-600 text-white p-4 rounded-lg mt-4" />
    </StackLayout>
</Page>